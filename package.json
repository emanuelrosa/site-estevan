{
  "name": "site-estevan",
  "version": "1.0.0",
  "description": "My personal website",
  "author": "Estevan Maito <ejmaito@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/estevanmaito/site-estevan"
  },
  "scripts": {
    "clean": "rimraf assets/{css/*,js/*,img/*}",
    "autoprefixer": "postcss -u autoprefixer -r assets/css/*",
    "scss": "node-sass --output-style compressed -o assets/css src/scss",
    "lint": "eslint src/js",
    "uglify": "mkdirp assets/js -p && uglifyjs src/js/*.js -m -o assets/js/app.js && uglifyjs src/js/*.js -m -c -o assets/js/app.min.js",
    "imagemin": "imagemin src/img/** -o assets/img",
    "icons": "svgo -f src/img/icons -o assets/img/icons && svg-sprite-generate -d assets/img/icons -o assets/img/icons/sprite.svg",
    "serve": "browser-sync start --server --files \"assets/css/*.css, assets/js/*.js, **/*.html, !node_modules/**/*.html\"",
    "build:css": "yarn run scss && yarn run autoprefixer",
    "build:js": "yarn run lint && yarn run uglify",
    "build:images": "yarn run imagemin",
    "build:all": "yarn run build:css && yarn run build:js && yarn run build:images",
    "watch:css": "onchange \"src/scss\" -- yarn run build:css",
    "watch:js": "onchange \"src/js\" -- yarn run build:js",
    "watch:images": "onchange \"src/img\" -- yarn run build:images",
    "watch:all": "npm-run-all -p serve watch:css watch:js watch:images",
    "postinstall": "yarn run build:all && yarn run watch:all",
    "build": "jekyll build"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "browser-sync": "^2.12.8",
    "eslint": "^2.10.2",
    "eslint-config-standard": "^5.3.1",
    "eslint-plugin-html": "^1.7.0",
    "eslint-plugin-promise": "^1.3.0",
    "eslint-plugin-standard": "^1.3.2",
    "imagemin-cli": "^3.0.0",
    "mkdirp": "^0.5.1",
    "node-sass": "^3.7.0",
    "npm-run-all": "^2.1.1",
    "onchange": "^2.4.0",
    "postcss-cli": "^2.5.2",
    "rimraf": "^2.5.4",
    "svg-sprite-generator": "0.0.7",
    "svgo": "^0.6.6",
    "uglify-js": "^2.6.2"
  }
}
